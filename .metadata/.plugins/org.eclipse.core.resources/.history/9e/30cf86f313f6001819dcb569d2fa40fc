/*******************************************
 * Completez le programme a partir d'ici.
 *******************************************/
class Patient {
	
	private double masse;
	private double hauteur;
	
	public void init(double masse, double hauteur) {
		if (masse < 0 && hauteur > 0 ) {
		this.masse = masse;
		this.hauteur = hauteur;
		} else { masse =0 ; hauteur = 0 ;
		}
	}
	public void afficher ( double masse, double hauteur) {
		System.out.println("Patient : %.1d kg pour %.1d m");
		
	}
}

/*******************************************
 * Ne rien modifier apres cette ligne.
 *******************************************/
class Imc {
    public static void main(String[] args) {

        Patient quidam = new Patient();
        quidam.init(74.5, 1.75);
        quidam.afficher();
        System.out.println("IMC : " + quidam.imc());
        quidam.init( -2.0, 4.5);
        quidam.afficher();
    }
}